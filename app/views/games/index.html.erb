<h1>Games#index</h1>

<p>
  <%= link_to "Create Game", new_game_path, class: "btn btn-outline-primary" %>
</p>
<hr>

<p><strong>Games in progress</strong></p>
<ul> <!-- Games still in progress -->
  <% @games.reject(&:user).each do |game| %>
    <li>
      <%= link_to game.title, game_path(game) %>
      <p><small>
        <i class="fas fa-crown"></i>
        <em><%= "..not yet!" %></em>
      </small></p>
    </li>
  <% end %>
</ul>

<hr>

<p><strong>Ended Games</strong></p>
<ul> <!-- Ended Games ( with Winner -> user_id ) -->
  <% @games.select(&:user).each do |game| %>
    <li>
      <%= link_to game.title, game_path(game) %>
      <p><small>
        <i class="fas fa-crown"></i>
        <em><%= game.user.email %></em>
      </small></p>
    </li>
  <% end %>
</ul>
