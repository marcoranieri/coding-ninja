<h1>Games#index</h1>

<p><%= link_to "Create Game", new_game_path, class: "btn btn-primary" %></p>

<ul>
  <% @games.each do |game| %>
    <li>
      <%= link_to game.title, game_path(game) %>
      <p><small>
        <i class="fas fa-crown"></i>
        <em><%= game.user ? game.user.email : "..not yet!" %></em>
      </small></p>
    </li>
  <% end %>
</ul>
